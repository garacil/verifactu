{
    "name": "openaeat/billing",
    "description": "PHP library for VeriFactu electronic invoicing with AEAT (Spanish Tax Agency)",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "verifactu",
        "aeat",
        "spain",
        "tax",
        "invoice",
        "electronic-invoicing",
        "factura",
        "agencia-tributaria"
    ],
    "authors": [
        {
            "name": "GermÃ¡n Luis Aracil Boned",
            "email": "garacilb@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-soap": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "ext-gd": "Required for QR code generation",
        "chillerlan/php-qrcode": "Required for QR code generation (^5.0)"
    },
    "autoload": {
        "psr-4": {
            "OpenAEAT\\Billing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenAEAT\\Billing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
